<div class='question-container'>
  <% @questions.each do |question| %>

    <article id="<%= question.id %>">
      <form method="post" action='/posts/<%= question.id %>/vote' class="inline">
        <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button upvote-button"></button>
      </form>
      <h2><a href='/questions/<%= question.id %>'><%= question.title %></a></h2>
      <p>
        <span class='points'><%= question.points %></span>
        <span class='username'><%= question.asker.user_name %></span>
        <span class='timestamp'><%= question.time_since_creation %></span>
        <span class='comment-count'><%= question.comments.count %></span>
        <a class="delete" href='/posts/<%= question.id %>'></a>
      </p>
    </article>

  <% end %>
</div>

<form id="posts" method="post" action="/posts">
  <input type="text" name="title" placeholder="title">
  <input type="submit" value="submit new question">
</form>
